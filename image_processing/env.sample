# ===== .env.sample =====
# Crown Automotive Image Processing Environment Variables
# Copy this file to .env and update with your actual values

# ===== General Settings =====
ENVIRONMENT=development
LOG_LEVEL=INFO
TZ=America/New_York

# ===== Processing Settings =====
PROCESSING_INPUT_DIR=/data/input
PROCESSING_PROCESSING_DIR=/data/processing
PROCESSING_PRODUCTION_DIR=/data/production
PROCESSING_REJECTED_DIR=/data/rejected
PROCESSING_METADATA_DIR=/data/metadata
PROCESSING_LOGS_DIR=/data/logs

PROCESSING_MIN_FILE_SIZE_BYTES=1024
PROCESSING_MAX_FILE_SIZE_BYTES=104857600
PROCESSING_SCAN_INTERVAL_SECONDS=30
PROCESSING_MIN_RESOLUTION=2500

# ===== Database Settings =====
FILEMAKER_DSN_PATH=/config/filemaker.dsn
FILEMAKER_SERVER=192.168.10.216
FILEMAKER_PORT=2399
FILEMAKER_DATABASE=CrownMasterDatabase
FILEMAKER_USERNAME=your_username
FILEMAKER_PASSWORD=your_password

# ===== Web Interface Settings =====
WEB_HOST=0.0.0.0
WEB_PORT=8080
WEB_SECRET_KEY=change-me-in-production
WEB_DEBUG=false

# ===== n8n Settings =====
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_password_here
PUBLIC_HOST=192.168.10.234

# ===== Notification Settings =====
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url-here

# ===== Docker/Runtime Settings =====
SCAN_INTERVAL=30