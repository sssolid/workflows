# Crown Automotive Image Processing Environment Variables
# Copy this file and update with your actual values

# Shared volume paths that n8n needs access to
DATA_DIR=/data
SCRIPTS_DIR=/scripts

# Timezone
TZ=America/New_York

# FileMaker Database
FILEMAKER_DSN_PATH=/config/filemaker.dsn
FILEMAKER_SERVER=192.168.10.216
FILEMAKER_PORT=2399
FILEMAKER_DATABASE=
FILEMAKER_USERNAME=
FILEMAKER_PASSWORD=

# n8n Configuration
N8N_BASIC_AUTH_PASSWORD=
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_HOST=192.168.10.234
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_SECURE_COOKIE=false
WEBHOOK_URL=http://192.168.10.234:5678
NODE_ENV=production
# Service discovery
ML_PROCESSOR_URL=http://ml_processor:8001
WEB_SERVER_URL=http://web_server:8080
FILE_MONITOR_URL=http://file_monitor:8002
IMAGE_PROCESSOR_URL=http://image_processor:8003
TEAMS_NOTIFIER_URL=http://teams_notifier:8004

# ml processing
CUDA_VISIBLE_DEVICES=""  # Disable CUDA for CPU-only processing
OMP_NUM_THREADS=4
MKL_NUM_THREADS=4

# web server
IMAGE_SERVER_HOST=0.0.0.0
IMAGE_SERVER_PORT=8080
IMAGE_SERVER_PUBLIC_HOST=192.168.10.234
IMAGE_SERVER_PUBLIC_PORT=8080

# image processor
JAVA_HOME=/usr/lib/jvm/java-11-openjdk-amd64
JVM_OPTS="-Xmx512m -Xms128m"

# teams notifier
TEAMS_WEBHOOK_URL=https://your-teams-webhook-url