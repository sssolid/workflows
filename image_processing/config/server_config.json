{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "base_url": "http://192.168.10.234:8080",
    "max_file_size_mb": 100,
    "allowed_origins": ["*"],
    "cors_enabled": true
  },
  "file_monitoring": {
    "scan_interval_seconds": 30,
    "supported_extensions": [".psd", ".png", ".jpg", ".jpeg", ".tif", ".tiff", ".bmp"],
    "min_file_size_bytes": 1024,
    "max_file_size_bytes": 104857600,
    "file_stability_check_seconds": 2
  },
  "image_processing": {
    "min_required_resolution": 2500,
    "default_dpi": 300,
    "web_dpi": 72,
    "quality_settings": {
      "jpeg_quality": 85,
      "jpeg_optimize": true,
      "tiff_compression": "tiff_lzw",
      "png_optimize": true
    },
    "watermark": {
      "enabled": true,
      "file": "/assets/watermark_crown.png",
      "opacity": 0.8,
      "scale_factor": 0.8
    },
    "brand_icon": {
      "enabled": true,
      "file": "/assets/icon_crown.png",
      "position": "bottom_right",
      "offset": [15, 15]
    }
  },
  "background_removal": {
    "default_model": "isnet-general-use",
    "fallback_models": ["u2net", "silueta"],
    "preprocessing": {
      "contrast_factor": 1.2,
      "brightness_factor": 1.0,
      "apply_sharpening": true,
      "apply_white_balance": true
    },
    "postprocessing": {
      "alpha_threshold": 40,
      "apply_morphological": true,
      "morph_operation": "open",
      "kernel_size": 3,
      "edge_feathering": 1
    },
    "retry_settings": {
      "max_retries": 2,
      "retry_delay_seconds": 5,
      "use_different_model": true
    }
  },
  "teams_integration": {
    "webhook_url": "YOUR_TEAMS_WEBHOOK_URL_HERE",
    "notifications_enabled": true,
    "notification_types": {
      "psd_processing_started": true,
      "psd_processing_complete": true,
      "background_removal_complete": true,
      "processing_approved": true,
      "processing_rejected": true,
      "processing_error": true,
      "daily_summary": true
    },
    "daily_summary_time": "09:00",
    "include_thumbnails": true,
    "max_image_size_kb": 500
  },
  "database": {
    "filemaker": {
      "dsn_file": "/config/filemaker.dsn",
      "connection_timeout": 30,
      "query_timeout": 60,
      "retry_attempts": 3
    }
  },
  "storage": {
    "paths": {
      "input": "/data/input",
      "processing": "/data/processing",
      "production": "/data/production",
      "rejected": "/data/rejected",
      "logs": "/data/logs",
      "decisions": "/data/decisions",
      "metadata": "/data/metadata"
    },
    "cleanup": {
      "enabled": true,
      "retention_days": {
        "processing_temp": 7,
        "logs": 30,
        "rejected": 90,
        "metadata": 180
      }
    }
  },
  "logging": {
    "level": "INFO",
    "file_path": "/data/logs/system.log",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "security": {
    "require_auth": false,
    "allowed_ips": ["192.168.10.0/24"],
    "rate_limiting": {
      "enabled": true,
      "requests_per_minute": 60,
      "burst_size": 10
    }
  },
  "performance": {
    "max_concurrent_processes": 4,
    "thumbnail_cache_size": 100,
    "enable_image_caching": true,
    "cache_duration_hours": 24
  }
}