# Web Server Container - Alpine base for lightweight dashboard
FROM python:3.11-alpine

# Install system dependencies
RUN apk add --no-cache \
    wget \
    curl \
    gcc \
    musl-dev \
    python3-dev

# Create working directory
WORKDIR /app

# Copy web server requirements
COPY requirements.web.txt /tmp/requirements.web.txt

# Install Python packages
RUN pip install --no-cache-dir -r /tmp/requirements.web.txt

# Create directories
RUN mkdir -p /scripts /config /templates /assets /data

# Copy web server files
COPY scripts/web_server.py /scripts/
COPY scripts/utils/__init__.py /scripts/utils/
COPY templates/ /templates/
COPY assets/ /assets/

# Set permissions
RUN chmod +x /scripts/*.py

# Expose port for web server
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD wget --quiet --tries=1 --spider http://localhost:8080/health || exit 1

# Run web server
CMD ["python3", "/scripts/web_server.py"]